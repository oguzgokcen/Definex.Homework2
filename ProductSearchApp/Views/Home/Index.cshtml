@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center d-flex justify-content-center align-content-center">
    <div class="search-container w-100 my-5">
        <div class="logo">Ürün Ara</div>

        <div class="search-box w-100">
            <input id="searchbar" class="form-control me-2 w-100" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-primary">Ara</button>
            <div class="search-results"></div>
        </div>
        
    </div>
    @Html.Hidden("SearchUrl",Url.Action("Search","Home"))
</div>

<style>
    .search-container {
        max-width: 600px;
        text-align: center;
    }

    .logo {
        font-size: 32px;
        font-weight: bold;
        color: #4285F4;
        margin-bottom: 20px;
    }

    .search-box {
        position: relative;
        display: flex;
        flex-direction:row;
    }

    .search-results {
        position: absolute;
        width: 100%;
        background: white;
        border: 1px solid #ddd;
        border-top: none;
        margin-top: 40px;
        display: none;
        text-align: left;
        box-sizing: border-box;
    }

    .result-item {
        padding: 10px;
        border-bottom: 1px solid #eee;
        cursor: pointer;
    }

        .result-item:hover {
            background-color: #f5f5f5;
        }

    .result-title {
        color: #1a0dab;
        margin-bottom: 3px;
    }

    .result-description {
        color: #666;
        font-size: 14px;
    }
</style>
